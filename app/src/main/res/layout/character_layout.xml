<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blancTransp">

    <ImageView
        android:id="@+id/CharImage"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_marginTop="4sp"
        android:layout_marginBottom="4sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
         />

    <TextView
        android:id="@+id/CharName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        app:layout_constraintBottom_toBottomOf="@+id/CharImage"
        app:layout_constraintEnd_toStartOf="@+id/ratingValue"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/CharImage"
        app:layout_constraintTop_toTopOf="@+id/CharImage"
        app:layout_constraintVertical_bias="0.506" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="193dp"
        android:layout_height="47dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="145dp" />

    <TextView
        android:id="@+id/ratingValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""

        app:layout_constraintBottom_toBottomOf="@+id/CharImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ratingBar"
        app:layout_constraintTop_toTopOf="@+id/CharImage" />


</androidx.constraintlayout.widget.ConstraintLayout>